#!/usr/bin/env bash
# Updates /etc/hosts so that localhost resolves to 127.0.0.2 and facebook.com to 8.8.8.8

# Backup the original /etc/hosts
sudo cp /etc/hosts /etc/hosts.bak

# Remove existing localhost and facebook.com lines (if any)
sudo sed -i '/localhost/d' /etc/hosts
sudo sed -i '/facebook.com/d' /etc/hosts

# Add the new entries
echo "127.0.0.2 localhost" | sudo tee -a /etc/hosts > /dev/null
echo "8.8.8.8 facebook.com" | sudo tee -a /etc/hosts > /dev/null
